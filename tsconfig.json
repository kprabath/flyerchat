{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "types": ["react-native", "jest"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "outDir": "lib",
    "rootDir": ".",
    "composite": false,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext"],
    "module": "ESNext",
    "noEmitOnError": true,
    "sourceMap": true,
    "checkJS": false
  },
  "include": ["src/**/*", "jest/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lib"
  ]
}
